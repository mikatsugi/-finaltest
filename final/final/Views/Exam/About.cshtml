
@{
    ViewBag.Title = "About";
}

@{
    string[] fruits = { "蘋果", "香蕉", "荔枝", "鳳梨", "西瓜" }; 
}

<div>
    @{
        <p>姓名: @ViewBag.name</p>
        <p>學號: @ViewBag.number</p>
        <p>喜歡的水果:</p>
        <ol>
            @foreach ( var item in fruits )
            {
                <li>@item</li>
            }
        </ol>
    }
</div>

